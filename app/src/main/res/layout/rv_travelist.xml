<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp"
    app:cardElevation="5dp"
    android:backgroundTint="@color/blackTrans"
    android:backgroundTintMode="src_atop"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:id="@+id/rv_container">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/rv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_info"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:id="@+id/rv_pointinterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="32sp"
                android:textColor="@color/colorPrimaryLight"
                android:text="Tokyo Tower"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@color/colorPrimaryLight"
                    android:src="@drawable/ic_maps_flags"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rv_loc"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4-Chome,Shibakoen,Minato"
                    android:textColor="@color/colorPrimaryLight"/>
            </LinearLayout>
            <TextView
                android:id="@+id/rv_desc"
                android:clickable="true"
                android:focusable="true"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textColor="@color/design_default_color_background"
                tools:text="Tokyo Tower is a communications and observation tower in the Shiba-koen district of Minato, Tokyo, Japan. At 332.9 metres, it is the second-tallest structure in Japan." />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>